btest = macro(int 1, int 2) {
  z = int 1+int 2;
  z*2;
};

n = btest(3, 5);

ptest = macro(){
  d1 = drop @ (0,3);
  d2 = drop @ (0,5);
  [[ d1 : 5 right;
     d2 : 10 right;
  ]]
  [[ d1 : 3 left;
     d2 : 2 left;
  ]]
};

foo = ptest();

d = drop @ (3,2);


three_right = macro(drop) drop : right 3;

over_and_up = macro(drop) {
  x = drop: right 3;
  y = x : up 2;
  x+3 right: turn on;
  x+3 right : toggle;
  (x+2 left): off;
  y = x: down 2;
  well #2's gate: on;
  w = well #3;
  w[0]: toggle;
};

a_times_b_plus_c = macro(a: int, b: int, c: int) a*b+c;

n=5*7+2*3;
abc = a_times_b_plus_c(5,7,9);


