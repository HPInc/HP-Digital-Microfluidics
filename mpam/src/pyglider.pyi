class Heater:
    class HeaterType(Enum):
        Paddle = auto()
        TSR = auto()
        Unknown = auto()
        
    class HeaterState(Enum):
        Off = auto()
        On = auto()
        Unknown = auto()
        
    class HeaterStatus(Enum):
        Warming = auto()
        Cooling = auto()
        Unknown = auto()
        
