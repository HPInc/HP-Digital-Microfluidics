    ErrorSuccess = auto()
    ErrorFailure = auto()
    ErrorFailureHardware = auto()
    ErrorFailureToOpenFile = auto()
    ErrorFailureSystem = auto()
    
class BoardId(Enum):
    Unknown = auto()
    Wallaby = auto()
    
    
